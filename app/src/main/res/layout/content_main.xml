<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rhossu.percentageapp.com.rhossu.percentageapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etPercentage"
        android:layout_marginBottom="99dp"
        android:ems="10"
        android:hint="Enter number "
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter percentage"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="What is "
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPercentage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="of"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etPercentage"
        android:layout_toEndOf="@+id/etNumber"
        android:text="%"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etNumber"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etNumber"
        android:layout_marginBottom="18dp"
        android:background="@color/colorAccent"
        android:text="Calculate"
        android:textColor="#FFFFFF" />

</RelativeLayout>
